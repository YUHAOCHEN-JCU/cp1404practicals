BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 10

            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_increment(-1)

    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: 1, 1, 0, 1
        halign: 'center'
        valign: 'middle'
        text_size: self.size
